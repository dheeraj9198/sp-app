<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F8F8"
    android:gravity="center" >

    <fragment
        android:id="@+id/ExamListFragment"
        android:name="com.softcircles.superprofs.fragments.ExamListFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/iv_browse_courses"
        android:layout_below="@+id/tv_exam_header_description"
        android:layout_gravity="center_horizontal" />

    <RelativeLayout
        android:id="@+id/header_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#000"
        android:paddingBottom="5dp">

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/orange_bars_black_back"
            android:layout_below="@+id/steps_layout"
            android:paddingLeft="80dp"
            android:paddingRight="80dp"
            android:layout_marginTop="2dp"
            android:layout_centerHorizontal="true"/>
        
        <LinearLayout
            android:id="@+id/steps_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#000"
            android:gravity="center"
            android:paddingTop="30dp" >

            <TextView
                android:id="@+id/tv2_header_regestration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000"
                android:gravity="center"
                android:text="Step 3"
                android:textColor="#FFF"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_header_regestration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#000"
                android:gravity="center"
                android:text=" of 3"
                android:textColor="#FFF"
                android:textSize="20dp" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/iv_browse_courses"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:background="@drawable/button_orange"
        android:gravity="center"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"
        android:text="BROWSE COURSES"
        android:textColor="#FFF"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tv_exam_header_description"
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/header_layout"
        android:background="#F7F8F8"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:text="Select your exam"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="25dp"/>

</RelativeLayout>